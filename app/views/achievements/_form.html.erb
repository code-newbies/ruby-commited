<%= form_for @achievement do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :points %>
    <%= f.text_field :points, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Save Achievement" %>
  </div>
<% end %>
